---
import logoAnachi from '../assets/logo-dark.png';
---

<footer class="py-12 px-4" style="background-color: var(--color-primary-dark);">
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-4 gap-8">
    
    {/* Columna 1: Logo y Copyright */}
    <div class="md:col-span-1 text-center md:text-left">
      <a href="/">
        <img src={logoAnachi.src} alt="Logo de Aduanas Anachi" width="150" class="mx-auto md:mx-0 mb-4" />
      </a>
      <p class="text-sm" style="color: var(--color-white);"> {/* <-- Añadido color blanco al copyright */}
        &copy; {new Date().getFullYear()} Aduanas Anachi S.L. Todos los derechos reservados.
      </p>
    </div>

    {/* Columna 2: Navegación */}
    <div class="md:col-span-1 text-center md:text-left">
      <h3 class="text-lg font-bold mb-4" style="color: var(--color-white);">Navegación</h3> {/* <-- Añadido color blanco */}
      <nav>
        <ul class="space-y-2" style="color: var(--color-white);"> {/* <-- Añadido color blanco a los elementos de la lista */}
          <li><a href="#home" class="hover:text-accent-orange transition-colors duration-200" style="color: var(--color-white);">Inicio</a></li>
          <li><a href="#services" class="hover:text-accent-orange transition-colors duration-200" style="color: var(--color-white);">Servicios</a></li>
          <li><a href="#about-us" class="hover:text-accent-orange transition-colors duration-200" style="color: var(--color-white);">Quiénes Somos</a></li>
          <li><a href="#contact" class="hover:text-accent-orange transition-colors duration-200" style="color: var(--color-white);">Contacto</a></li>
        </ul>
      </nav>
    </div>

    {/* Columna 3: Contacto */}
    <div class="md:col-span-1 text-center md:text-left">
      <h3 class="text-lg font-bold mb-4" style="color: var(--color-white);">Contacto</h3> {/* <-- Añadido color blanco */}
      <address class="not-italic">
        <p class="mb-2" style="color: var(--color-white);">Calle Luis Doreste Silva, 6</p> {/* <-- Añadido color blanco */}
        <p class="mb-2" style="color: var(--color-white);">35004 Las Palmas de Gran Canaria</p> {/* <-- Añadido color blanco */}
        <p class="mb-2"><a href="tel:+34928292800" class="hover:text-accent-orange transition-colors duration-200" style="color: var(--color-white);">+34 928 292 800</a></p>
        <p><a href="mailto:info@anachi.es" class="hover:text-accent-orange transition-colors duration-200" style="color: var(--color-white);">info@anachi.es</a></p>
        <p class="mt-4">
          <a 
            href="https://www.google.com/maps/place//data=!4m2!3m1!1s0xc409568a72a34e5:0x43c2b54b4f60b7e1?sa=X&ved=1t:8290&ictx=111" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="mt-4 hover:text-accent-orange transition-colors duration-200 flex items-center justify-center md:justify-start"
            style="color: var(--color-white);" {/* <-- Añadido color blanco */}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0L6.343 16.657a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            Ver en Google Maps
          </a>
        </p>
      </address>
    </div>

    {/* Columna 4: Redes Sociales */}
    <div class="md:col-span-1 text-center md:text-left">
      <h3 class="text-lg font-bold mb-4" style="color: var(--color-white);">Síguenos</h3> {/* <-- Añadido color blanco */}
      <div class="flex justify-center md:justify-start space-x-4">
        {/* LinkedIn */}
        <a href="https://www.linkedin.com/company/aduanas-anachi/" target="_blank" rel="noopener noreferrer" class="hover:text-accent-orange transition-colors duration-200" style="color: var(--color-white);">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
        </a>
        {/* Aquí puedes añadir otros si tienen */}
      </div>
    </div>
  </div>
</footer>